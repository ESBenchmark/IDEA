<idea-plugin>
	<id>com.kaciras.esbench</id>
	<name>ESBench-IDEA</name>
	<description>IDEA plugin to help you run ESBench suite quickly</description>
	<vendor email="kaciras@outlook.com">Kaciras</vendor>

	<depends>com.intellij.modules.platform</depends>
	<depends>NodeJS</depends>
	<depends>JavaScript</depends>

	<extensions defaultExtensionNs="com.intellij">
		<runLineMarkerContributor
				language="JavaScript"
				implementationClass="com.kaciras.esbench.RunLineMarker"
		/>
	</extensions>
</idea-plugin>
