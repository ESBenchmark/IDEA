<idea-plugin>
	<id>com.kaciras.esbench</id>
	<name>ESBench</name>
	<description>Run ESBench suites by clicking on the line marker</description>
	<vendor url="https://github.com/ESBenchmark/IDEA">Kaciras</vendor>

	<depends>com.intellij.modules.platform</depends>
	<depends>NodeJS</depends>
	<depends>JavaScript</depends>

	<extensions defaultExtensionNs="com.intellij">
		<configurationType
				implementation="com.kaciras.esbench.ESBenchConfigType"
		/>
		<runLineMarkerContributor
				language="JavaScript"
				implementationClass="com.kaciras.esbench.RunLineMarker"
		/>
		<implicitUsageProvider
				implementation="com.kaciras.esbench.SuiteUsageProvider"
		/>
		<localInspection
				language="JavaScript"
				displayName="Convert suite style"
				groupName="ESBench"
				enabledByDefault="true"
				level="INFORMATION"
				implementationClass="com.kaciras.esbench.ConvertStyleInspection"/>
	</extensions>
</idea-plugin>
